<div class="edit-section">
  <div class="row">
    <div class="col-md-14">
      <h3> <%= @company.name %> is being modified </h3>
      <%= form_tag "/companies/#{@company.id}", method: :patch do %> 
        <div class="col-md-4">
          <div class="form-group">
            <label for="text">Name: </label>
            <input type="text" class="form-control" name="name" value="<%=@company.name %>" placeholder="Company name">
          </div> 
          <div class="form-group">
            <label for="text">Description: </label>
            <textarea rows="4" cols="50" type="text" class="form-control" name="description" placeholder="Company Description"> <%=@company.description %> </textarea>
          </div> 
          <div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button class="btn btn-info"><a href="/companies">Cancel</a></button>
          </div>
        </div>
      <% end %>   
    </div>
  </div>
</div>