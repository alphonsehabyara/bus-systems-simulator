<div class="new-section">
  <div class="row"> 
    <h3> New Bus Stop is being added </h3>
    <%= form_tag "/bus_stops", method: :post do %> 
    <div class="col-md-8 offset-4">
      <div class="form-group">
        <label for="text">Name: </label>
        <input type="text" class="form-control" name="name" placeholder="Bus stop name">
      </div> 
      <div class="form-group">
        <label for="text">Address: </label>
        <input type="text" class="form-control" name="address" placeholder="Bus stop address">
      </div> 
      <div class="form-group">
        <label for="text">Stop Order: </label>
        <input type="text" class="form-control" name="stop_order" placeholder="Bus Stop Order">
      </div> 
      <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button class="btn btn-info"><a href="/bus_stops">Cancel</a></button>
      </div>
    </div>
    <% end %>
  </div>  
</div>  