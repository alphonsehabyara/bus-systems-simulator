<h1>Bus Stops and Terminals</h1>

<%= render 'layouts/map' %>

<div class="container">
<%= button_to "Add a Bus Stop", "/bus_stops/new", class: "btn btn-primary", method: :get %> </br>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Latitude</th> 
      <th>Longitude</th>
      <th>Stop Order</th> 
    </tr>
    <% @bus_stops.each do |bus_stop| %>
    <tr>
      <td><%= bus_stop.name %></td>
      <td><%= bus_stop.latitude %></td> 
      <td><%= bus_stop.longitude %></td>
      <td><%= bus_stop.stop_order %></td> 
    </tr>
    <% end %>
  </table>
</div>
