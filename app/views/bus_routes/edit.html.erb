<h3> <%= @bus_route.name %> is being modified </h3>
<%= form_tag "/bus_routes/#{@bus_route.id}", method: :patch do %> 
  <div class="form-group">
    <label for="text">Name: </label>
    <input type="text" class="form-control" name="name" value="<%=@bus_route.name %>" placeholder="Bus Route">
  </div> 
  <div class="form-group">
    <label for="text">Description: </label>
    <textarea rows="4" cols="50" type="text" class="form-control" name="description" placeholder="Bus Route Description"> <%=@bus_route.description %> </textarea>
  </div> 
  <div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
<% end %>